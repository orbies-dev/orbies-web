---
import Layout from "../layouts/Layout.astro";
import AppCard from "../components/AppCard.astro";
import Icon from "../components/Icon.astro";
import { orbs } from "../data/orbs";
---

<Layout
  title="Browse Apps - orbies.dev"
  description="Discover small, focused apps built by developers in hours."
>
  <section class="apps-hero">
    <div class="hero-background">
      <div class="warp-grid"></div>
      <div class="floating-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
      </div>
      <div class="gradient-mesh"></div>
    </div>

    <div class="container">
      <div class="hero-header">
        <div class="hero-badge fade-in-up">
          <div class="badge-dot"></div>
          <span>300+ shipped</span>
        </div>
        <h1 class="hero-title">
          <span class="title-line fade-in-up" style="animation-delay: 0.1s"
            >Built in</span
          >
          <span
            class="title-line fade-in-up hero-accent"
            style="animation-delay: 0.2s">hours</span
          >
          <span class="title-line fade-in-up" style="animation-delay: 0.3s"
            >not months</span
          >
        </h1>
        <p class="hero-subtitle fade-in-up" style="animation-delay: 0.4s">
          One problem. Done well.
        </p>
      </div>
    </div>
  </section>

  <section class="apps-content section-padding">
    <div class="container">
      <div class="filters-section glass-card">
        <div class="search-container">
          <div class="search-icon">
            <Icon name="search" size={16} />
          </div>
          <input
            type="text"
            placeholder="Find something..."
            class="search-input"
            id="searchInput"
          />
        </div>

        <div class="filters-grid">
          <div class="filter-group">
            <h3 class="filter-title">Platform</h3>
            <div class="filter-pills">
              <button class="filter-pill active liquid-btn" data-filter="all">
                <span>All</span>
              </button>
              <button class="filter-pill glass-btn" data-filter="macos">
                <span>macOS</span>
              </button>
              <button class="filter-pill glass-btn" data-filter="windows">
                <span>Windows</span>
              </button>
              <button class="filter-pill glass-btn" data-filter="linux">
                <span>Linux</span>
              </button>
              <button class="filter-pill glass-btn" data-filter="web">
                <span>Web</span>
              </button>
              <button class="filter-pill glass-btn" data-filter="cli">
                <span>CLI</span>
              </button>
            </div>
          </div>

          <div class="filter-group">
            <h3 class="filter-title">Technology</h3>
            <div class="filter-pills">
              <button class="filter-pill active liquid-btn" data-tech="all">
                <span>All</span>
              </button>
              <button class="filter-pill glass-btn" data-tech="Swift">
                <span>Swift</span>
              </button>
              <button class="filter-pill glass-btn" data-tech="Rust">
                <span>Rust</span>
              </button>
              <button class="filter-pill glass-btn" data-tech="Go">
                <span>Go</span>
              </button>
              <button class="filter-pill glass-btn" data-tech="TypeScript">
                <span>TypeScript</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="apps-grid" id="appsGrid">
        {
          orbs.map((orb) => (
            <div
              class="app-item glass-hover"
              data-platforms={orb.platforms.join(",")}
              data-tech={orb.tech.join(",")}
            >
              <AppCard
                name={orb.name}
                description={orb.description}
                icon={orb.icon}
                tech={orb.tech}
                buildTime={orb.buildTime}
                github={orb.github}
                stars={orb.stars}
              />
            </div>
          ))
        }
      </div>

      <div
        class="empty-state glass-card"
        id="emptyState"
        style="display: none;"
      >
        <div class="empty-icon">
          <Icon name="search" size={48} />
        </div>
        <h3>Nothing here</h3>
        <p>Try different filters.</p>
        <button class="liquid-btn" id="resetFilters">
          <span>Reset</span>
          <span class="btn-arrow">â†»</span>
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ============================================
     ANIMATED APPS PAGE
     ============================================ */
  .apps-hero {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--header-height) + var(--space-2xl)) 0 var(--space-4xl);
    position: relative;
    overflow: hidden;
    background: var(--bg-primary);
    color: var(--text-primary);
  }

  /* Hero Background Animations */
  .hero-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .warp-grid {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(
        var(--border-primary) 0.5px,
        transparent 0.5px
      ),
      linear-gradient(90deg, var(--border-primary) 0.5px, transparent 0.5px);
    background-size: 80px 80px;
    opacity: 0.4;
    animation: warpFloat 30s ease-in-out infinite;
    transform-origin: center;
  }

  @keyframes warpFloat {
    0%,
    100% {
      transform: perspective(1000px) rotateX(0deg) rotateY(0deg) scale(1);
    }
    33% {
      transform: perspective(1000px) rotateX(2deg) rotateY(1deg) scale(1.02);
    }
    66% {
      transform: perspective(1000px) rotateX(-1deg) rotateY(-2deg) scale(0.98);
    }
  }

  .floating-shapes {
    position: absolute;
    inset: 0;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-soft), transparent);
    animation: shapeFloat 20s ease-in-out infinite;
    filter: blur(1px);
  }

  .shape-1 {
    width: 180px;
    height: 180px;
    top: 15%;
    left: 10%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 120px;
    height: 120px;
    top: 50%;
    right: 15%;
    animation-delay: 5s;
  }

  .shape-3 {
    width: 90px;
    height: 90px;
    top: 20%;
    right: 25%;
    animation-delay: 10s;
  }

  .shape-4 {
    width: 140px;
    height: 140px;
    bottom: 20%;
    left: 30%;
    animation-delay: 15s;
  }

  @keyframes shapeFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translate(20px, -15px) scale(1.1);
      opacity: 0.6;
    }
  }

  .gradient-mesh {
    position: absolute;
    inset: 0;
    background: radial-gradient(
        circle at 20% 50%,
        var(--accent-glow) 0%,
        transparent 50%
      ),
      radial-gradient(circle at 80% 20%, var(--accent-soft) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, var(--accent-glow) 0%, transparent 50%);
    animation: meshShift 25s ease-in-out infinite;
  }

  @keyframes meshShift {
    0%,
    100% {
      opacity: 0.4;
      transform: scale(1) rotate(0deg);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.1) rotate(2deg);
    }
  }

  /* Hero Header */
  .hero-header {
    text-align: center;
    position: relative;
    z-index: 10;
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  /* Hero Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-glass);
    backdrop-filter: blur(var(--blur-md));
    -webkit-backdrop-filter: blur(var(--blur-md));
    border: 1px solid var(--border-primary);
    border-radius: 2rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    animation: fadeInUp 0.8s ease-out;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
  }

  .hero-badge:hover {
    background: var(--bg-glass-strong);
    border-color: var(--border-strong);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--accent);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  /* Title Line */
  .title-line {
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero-title {
    font-size: clamp(2.75rem, 8vw, 4.5rem);
    margin: 0;
    color: var(--text-primary);
    font-weight: 700;
    letter-spacing: -0.04em;
    line-height: 1.05;
  }

  .hero-accent {
    color: var(--accent);
    position: relative;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--text-secondary);
    font-weight: 400;
    letter-spacing: -0.01em;
    max-width: 600px;
    margin: 0;
    line-height: 1.5;
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Apps Content */
  .apps-content {
    background: var(--bg-secondary);
    position: relative;
    min-height: 100vh;
  }

  /* Filters Section */
  .filters-section {
    padding: var(--space-xl);
    background: var(--glass-primary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    backdrop-filter: var(--glass-blur);
    margin-bottom: var(--space-3xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    transition: all var(--transition-normal);
  }

  .filters-section:hover {
    background: var(--glass-secondary);
    border-color: var(--border-glass);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  /* Search Container */
  .search-container {
    position: relative;
    width: 100%;
  }

  .search-icon {
    position: absolute;
    left: var(--space-lg);
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-tertiary);
    z-index: 1;
  }

  .search-input {
    width: 100%;
    padding: var(--space-lg) var(--space-lg) var(--space-lg)
      calc(var(--space-lg) * 3);
    background: var(--glass-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    color: var(--text-primary);
    font-size: var(--text-base);
    outline: none;
    transition: all var(--transition-normal);
    font-family: inherit;
    letter-spacing: -0.01em;
    backdrop-filter: var(--glass-blur);
  }

  .search-input:focus {
    border-color: var(--primary);
    background: var(--glass-tertiary);
    box-shadow:
      0 0 0 3px var(--primary-glow),
      var(--shadow-md);
  }

  .search-input::placeholder {
    color: var(--text-quaternary);
  }

  /* Filters Grid */
  .filters-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .filter-title {
    font-weight: 600;
    color: var(--text-primary);
    font-size: var(--text-lg);
    margin: 0;
    letter-spacing: -0.01em;
  }

  .filter-pills {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .filter-pill {
    padding: var(--space-sm) var(--space-lg);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-normal);
    white-space: nowrap;
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .filter-pill.glass-btn {
    background: var(--glass-primary);
    color: var(--text-secondary);
    backdrop-filter: var(--glass-blur);
  }

  .filter-pill.glass-btn:hover {
    background: var(--glass-secondary);
    border-color: var(--border-glass);
    color: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  .filter-pill.liquid-btn {
    background: var(--black);
    color: white;
    border-color: var(--black);
    box-shadow: var(--shadow-sm);
  }

  .filter-pill.liquid-btn:hover {
    background: var(--black-soft);
    box-shadow:
      var(--shadow-md),
      0 0 20px var(--red-glow);
  }

  .filter-pill.active {
    transform: scale(1.05);
  }

  /* Apps Grid */
  .apps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: var(--space-xl);
    position: relative;
    z-index: var(--z-elevated);
  }

  .app-item {
    transition: all var(--transition-normal);
  }

  .app-item.glass-hover:hover {
    transform: translateY(-4px) scale(1.02);
  }

  .app-item.hidden {
    display: none;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-5xl) var(--space-2xl);
    background: var(--glass-primary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    backdrop-filter: var(--glass-blur);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
    position: relative;
    z-index: var(--z-elevated);
  }

  .empty-icon {
    opacity: 0.3;
    color: var(--text-tertiary);
  }

  .empty-state h3 {
    color: var(--text-primary);
    font-size: var(--text-xl);
    font-weight: 600;
    margin: 0;
  }

  .empty-state p {
    color: var(--text-secondary);
    font-size: var(--text-base);
    margin: 0;
  }

  .btn-arrow {
    transition: transform var(--transition-normal);
  }

  .liquid-btn:hover .btn-arrow {
    transform: rotate(180deg);
  }

  /* ============================================
     RESPONSIVE DESIGN
     ============================================ */
  @media (max-width: 1024px) {
    .filters-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .apps-grid {
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: var(--space-xl);
    }
  }

  @media (max-width: 768px) {
    .apps-hero {
      min-height: 60vh;
      padding: calc(var(--header-height) + 1.5rem) 0 2rem;
    }

    .hero-header {
      gap: 1.5rem;
    }

    .hero-title {
      font-size: clamp(2.25rem, 10vw, 3rem);
    }

    .filters-section {
      padding: var(--space-xl);
      gap: var(--space-xl);
    }

    .apps-grid {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .filter-pills {
      gap: var(--space-xs);
    }

    .filter-pill {
      padding: var(--space-xs) var(--space-md);
      font-size: var(--text-xs);
    }

    /* Reduce floating shapes on mobile */
    .shape {
      filter: blur(40px);
      opacity: 0.2;
    }

    .warp-grid {
      background-size: 60px 60px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: clamp(1.875rem, 12vw, 2.5rem);
    }

    .hero-subtitle {
      font-size: clamp(0.9375rem, 3vw, 1rem);
    }

    .filters-section {
      margin-bottom: var(--space-2xl);
      padding: var(--space-lg);
    }
  }

  /* ============================================
     ACCESSIBILITY
     ============================================ */
  @media (prefers-reduced-motion: reduce) {
    .warp-grid,
    .floating-shapes::before,
    .floating-shapes::after,
    .shape-1,
    .shape-2,
    .shape-3,
    .shape-4,
    .gradient-mesh,
    .badge-dot,
    .hero-badge,
    .title-line,
    .hero-subtitle,
    .app-item,
    .filter-pill {
      animation: none !important;
      transition: none !important;
    }

    .app-item.glass-hover:hover,
    .filter-pill:hover,
    .hero-badge:hover {
      transform: none;
    }
  }

  /* Focus states */
  .search-input:focus-visible,
  .filter-pill:focus-visible,
  .liquid-btn:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.getElementById(
      "searchInput"
    ) as HTMLInputElement;
    const appsGrid = document.getElementById("appsGrid") as HTMLElement;
    const emptyState = document.getElementById("emptyState") as HTMLElement;
    const appItems = Array.from(document.querySelectorAll(".app-item"));
    const filterPills = Array.from(document.querySelectorAll(".filter-pill"));
    const resetButton = document.getElementById("resetFilters");

    let activeFilters = {
      platform: "all",
      tech: "all",
      search: "",
    };

    // Enhanced filter functionality
    function filterApps() {
      let visibleCount = 0;

      appItems.forEach((item) => {
        const element = item as HTMLElement;
        const platforms = element.dataset.platforms?.split(",") || [];
        const techs = element.dataset.tech?.split(",") || [];
        const text = element.textContent?.toLowerCase() || "";

        const matchesPlatform =
          activeFilters.platform === "all" ||
          platforms.includes(activeFilters.platform);
        const matchesTech =
          activeFilters.tech === "all" ||
          techs.some((t) => t.includes(activeFilters.tech));
        const matchesSearch =
          activeFilters.search === "" || text.includes(activeFilters.search);

        if (matchesPlatform && matchesTech && matchesSearch) {
          element.classList.remove("hidden");
          element.style.animationDelay = `${visibleCount * 0.1}s`;
          visibleCount++;
        } else {
          element.classList.add("hidden");
        }
      });

      if (visibleCount === 0) {
        emptyState.style.display = "flex";
        appsGrid.style.display = "none";
      } else {
        emptyState.style.display = "none";
        appsGrid.style.display = "grid";
      }
    }

    // Search functionality with debouncing
    let searchTimeout: NodeJS.Timeout;
    searchInput?.addEventListener("input", (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        activeFilters.search = (
          e.target as HTMLInputElement
        ).value.toLowerCase();
        filterApps();
      }, 300);
    });

    // Filter pill interactions
    filterPills.forEach((pill) => {
      pill.addEventListener("click", () => {
        const filterType = pill.hasAttribute("data-filter")
          ? "platform"
          : "tech";
        const filterValue =
          pill.getAttribute(
            `data-${filterType === "platform" ? "filter" : "tech"}`
          ) || "all";

        // Update active states
        const siblings =
          pill.parentElement?.querySelectorAll(".filter-pill") || [];
        siblings.forEach((p) => {
          p.classList.remove("active", "liquid-btn");
          p.classList.add("glass-btn");
        });

        pill.classList.remove("glass-btn");
        pill.classList.add("active", "liquid-btn");

        // Update filter state
        if (filterType === "platform") {
          activeFilters.platform = filterValue;
        } else {
          activeFilters.tech = filterValue;
        }

        filterApps();
      });
    });

    // Reset filters
    resetButton?.addEventListener("click", (e) => {
      e.preventDefault();
      activeFilters = { platform: "all", tech: "all", search: "" };
      searchInput.value = "";

      filterPills.forEach((pill) => {
        const isAll = pill.textContent?.trim() === "All";
        pill.classList.remove("active", "liquid-btn", "glass-btn");
        if (isAll) {
          pill.classList.add("active", "liquid-btn");
        } else {
          pill.classList.add("glass-btn");
        }
      });

      filterApps();
    });

    // Enhanced hover effects for app items
    appItems.forEach((item, index) => {
      const element = item as HTMLElement;

      element.addEventListener("mouseenter", () => {
        element.style.transform = "translateY(-8px) scale(1.02)";
        element.style.zIndex = "10";
      });

      element.addEventListener("mouseleave", () => {
        element.style.transform = "translateY(0) scale(1)";
        element.style.zIndex = "1";
      });
    });

    // Intersection Observer for scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("animate-in");
        }
      });
    }, observerOptions);

    // Observe app items for scroll animations
    appItems.forEach((item) => {
      observer.observe(item);
    });

    // Parallax effect for floating elements
    let ticking = false;

    function updateParallax() {
      const scrolled = window.pageYOffset;
      const elements = document.querySelectorAll(".element");

      elements.forEach((element, index) => {
        const speed = 0.1 + index * 0.05;
        const yPos = -(scrolled * speed);
        (element as HTMLElement).style.transform = `translateY(${yPos}px)`;
      });

      ticking = false;
    }

    window.addEventListener("scroll", () => {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    });
  });
</script>
