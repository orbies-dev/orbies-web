---
import Layout from "../layouts/Layout.astro";
import AppCard from "../components/AppCard.astro";
import Icon from "../components/Icon.astro";
import { orbs } from "../data/orbs";
---

<Layout
  title="Explore Orbs - Small Apps Built in Hours"
  description="Tiny, focused apps built rapidly with AI and shared freely. One problem. One solution. Open source."
>
  <section class="apps-hero">
    <div class="hero-background">
      <div class="warp-grid"></div>
      <div class="floating-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
        <div class="shape shape-4"></div>
      </div>
      <div class="gradient-mesh"></div>
    </div>

    <div class="container">
      <div class="hero-header">
        <div class="hero-badge fade-in-up">
          <div class="badge-dot"></div>
          <span>Explore the collection</span>
        </div>
        <h1 class="hero-title">
          <span class="title-line fade-in-up" style="animation-delay: 0.1s"
            >Small tools.</span
          >
          <span class="title-line fade-in-up" style="animation-delay: 0.2s">
            <span class="hero-accent">Real</span> problems.
          </span>
          <span class="title-line fade-in-up" style="animation-delay: 0.3s"
            >Built in hours.</span
          >
        </h1>
        <p class="hero-subtitle fade-in-up" style="animation-delay: 0.4s">
          Small enough to build quickly. Useful enough to share. All open
          source.
        </p>
      </div>
    </div>
  </section>

  <section class="apps-content section-padding">
    <div class="container">
      <div class="filters-section">
        <div class="filters-header">
          <div class="filters-info">
            <h2 class="filters-heading">Explore</h2>
            <p class="results-counter" id="resultsCounter">
              <span id="visibleCount">0</span> of <span id="totalCount"
                >{orbs.length}</span
              > Orbs
            </p>
          </div>
          <button class="reset-btn" id="resetFilters" style="display: none;">
            <Icon name="refresh" size={14} />
            <span>Clear filters</span>
          </button>
        </div>

        <div class="search-container">
          <div class="search-icon">
            <Icon name="search" size={18} />
          </div>
          <input
            type="text"
            placeholder="Search Orbs by name, description, or tech..."
            class="search-input"
            id="searchInput"
          />
          <button class="clear-search" id="clearSearch" style="display: none;">
            <Icon name="x" size={16} />
          </button>
        </div>

        <div class="filters-grid">
          <div class="filter-group">
            <h3 class="filter-title">
              <Icon name="monitor" size={16} />
              <span>Platform</span>
            </h3>
            <div class="filter-pills">
              <button class="filter-pill active" data-filter="all">
                All
              </button>
              <button class="filter-pill" data-filter="macos"> macOS </button>
              <button class="filter-pill" data-filter="windows">
                Windows
              </button>
              <button class="filter-pill" data-filter="linux"> Linux </button>
              <button class="filter-pill" data-filter="web"> Web </button>
              <button class="filter-pill" data-filter="cli"> CLI </button>
            </div>
          </div>

          <div class="filter-group">
            <h3 class="filter-title">
              <Icon name="code" size={16} />
              <span>Technology</span>
            </h3>
            <div class="filter-pills">
              <button class="filter-pill active" data-tech="all"> All </button>
              <button class="filter-pill" data-tech="Swift"> Swift </button>
              <button class="filter-pill" data-tech="Rust"> Rust </button>
              <button class="filter-pill" data-tech="Go"> Go </button>
              <button class="filter-pill" data-tech="TypeScript">
                TypeScript
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="apps-grid" id="appsGrid">
        {
          orbs.map((orb) => (
            <div
              class="app-item glass-hover"
              data-platforms={orb.platforms.join(",")}
              data-tech={orb.tech.join(",")}
            >
              <AppCard
                name={orb.name}
                description={orb.description}
                icon={orb.icon}
                tech={orb.tech}
                buildTime={orb.buildTime}
                github={orb.github}
                stars={orb.stars}
              />
            </div>
          ))
        }
      </div>

      <div
        class="empty-state glass-card"
        id="emptyState"
        style="display: none;"
      >
        <div class="empty-icon">
          <Icon name="search" size={48} />
        </div>
        <h3>No matches</h3>
        <p>Try different filters or search terms.</p>
        <button class="liquid-btn" id="resetFilters">
          <span>Clear all</span>
          <span class="btn-arrow">â†»</span>
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* ============================================
     ANIMATED APPS PAGE
     ============================================ */
  .apps-hero {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--header-height) + var(--space-2xl)) 0 var(--space-4xl);
    position: relative;
    overflow: hidden;
    background: var(--bg-primary);
    color: var(--text-primary);
  }

  /* Hero Background Animations */
  .hero-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .warp-grid {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(
        var(--border-primary) 0.5px,
        transparent 0.5px
      ),
      linear-gradient(90deg, var(--border-primary) 0.5px, transparent 0.5px);
    background-size: 80px 80px;
    opacity: 0.4;
    animation: warpFloat 30s ease-in-out infinite;
    transform-origin: center;
  }

  @keyframes warpFloat {
    0%,
    100% {
      transform: perspective(1000px) rotateX(0deg) rotateY(0deg) scale(1);
    }
    33% {
      transform: perspective(1000px) rotateX(2deg) rotateY(1deg) scale(1.02);
    }
    66% {
      transform: perspective(1000px) rotateX(-1deg) rotateY(-2deg) scale(0.98);
    }
  }

  .floating-shapes {
    position: absolute;
    inset: 0;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-soft), transparent);
    animation: shapeFloat 20s ease-in-out infinite;
    filter: blur(1px);
  }

  .shape-1 {
    width: 180px;
    height: 180px;
    top: 15%;
    left: 10%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 120px;
    height: 120px;
    top: 50%;
    right: 15%;
    animation-delay: 5s;
  }

  .shape-3 {
    width: 90px;
    height: 90px;
    top: 20%;
    right: 25%;
    animation-delay: 10s;
  }

  .shape-4 {
    width: 140px;
    height: 140px;
    bottom: 20%;
    left: 30%;
    animation-delay: 15s;
  }

  @keyframes shapeFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translate(20px, -15px) scale(1.1);
      opacity: 0.6;
    }
  }

  .gradient-mesh {
    position: absolute;
    inset: 0;
    background: radial-gradient(
        circle at 20% 50%,
        var(--accent-glow) 0%,
        transparent 50%
      ),
      radial-gradient(circle at 80% 20%, var(--accent-soft) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, var(--accent-glow) 0%, transparent 50%);
    animation: meshShift 25s ease-in-out infinite;
  }

  @keyframes meshShift {
    0%,
    100% {
      opacity: 0.4;
      transform: scale(1) rotate(0deg);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.1) rotate(2deg);
    }
  }

  /* Hero Header */
  .hero-header {
    text-align: center;
    position: relative;
    z-index: 10;
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  /* Hero Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-glass);
    backdrop-filter: blur(var(--blur-md));
    -webkit-backdrop-filter: blur(var(--blur-md));
    border: 1px solid var(--border-primary);
    border-radius: 2rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    animation: fadeInUp 0.8s ease-out;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
  }

  .hero-badge:hover {
    background: var(--bg-glass-strong);
    border-color: var(--border-strong);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--accent);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.2);
    }
  }

  /* Title Line */
  .title-line {
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero-title {
    font-size: clamp(2.75rem, 8vw, 4.5rem);
    margin: 0;
    color: var(--text-primary);
    font-weight: 700;
    letter-spacing: -0.04em;
    line-height: 1.05;
  }

  .hero-accent {
    color: var(--accent);
    position: relative;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: var(--text-secondary);
    font-weight: 400;
    letter-spacing: -0.01em;
    max-width: 600px;
    margin: 0;
    line-height: 1.5;
    animation: fadeInUp 0.8s ease-out 0.4s both;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Apps Content */
  .apps-content {
    background: var(--bg-secondary);
    position: relative;
    min-height: 100vh;
  }

  /* Filters Section */
  .filters-section {
    padding: var(--space-8);
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-2xl);
    backdrop-filter: blur(var(--blur-lg));
    -webkit-backdrop-filter: blur(var(--blur-lg));
    margin-bottom: var(--space-12);
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    box-shadow: var(--shadow-sm);
  }

  /* Filters Header */
  .filters-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
  }

  .filters-info {
    flex: 1;
  }

  .filters-heading {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 var(--space-2) 0;
    letter-spacing: -0.02em;
  }

  .results-counter {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin: 0;
    font-weight: 500;
  }

  .results-counter span {
    color: var(--accent);
    font-weight: 600;
  }

  .reset-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
    backdrop-filter: blur(var(--blur-sm));
    -webkit-backdrop-filter: blur(var(--blur-sm));
  }

  .reset-btn:hover {
    background: var(--bg-glass-strong);
    border-color: var(--border-strong);
    color: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  .reset-btn:active {
    transform: translateY(0);
  }

  /* Search Container */
  .search-container {
    position: relative;
    width: 100%;
  }

  .search-icon {
    position: absolute;
    left: var(--space-4);
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-tertiary);
    z-index: 1;
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: var(--space-4) var(--space-12) var(--space-4) var(--space-12);
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    color: var(--text-primary);
    font-size: var(--font-size-base);
    outline: none;
    transition: all var(--transition-normal);
    font-family: inherit;
    letter-spacing: -0.01em;
  }

  .search-input:focus {
    border-color: var(--accent);
    background: var(--bg-primary);
    box-shadow: 0 0 0 3px var(--accent-soft);
  }

  .search-input::placeholder {
    color: var(--text-tertiary);
  }

  .clear-search {
    position: absolute;
    right: var(--space-4);
    top: 50%;
    transform: translateY(-50%);
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: 50%;
    color: var(--text-tertiary);
    cursor: pointer;
    transition: all var(--transition-fast);
    z-index: 1;
  }

  .clear-search:hover {
    background: var(--bg-glass-strong);
    border-color: var(--border-strong);
    color: var(--text-primary);
    transform: translateY(-50%) scale(1.05);
  }

  /* Filters Grid */
  .filters-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .filter-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 600;
    color: var(--text-primary);
    font-size: var(--font-size-base);
    margin: 0;
    letter-spacing: -0.01em;
  }

  .filter-title :global(svg) {
    color: var(--text-tertiary);
  }

  .filter-pills {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .filter-pill {
    padding: var(--space-2) var(--space-4);
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-full);
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
    backdrop-filter: blur(var(--blur-sm));
    -webkit-backdrop-filter: blur(var(--blur-sm));
    font-family: inherit;
  }

  .filter-pill:hover {
    background: var(--bg-glass-strong);
    border-color: var(--border-strong);
    color: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  .filter-pill:active {
    transform: translateY(0);
  }

  .filter-pill.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
    box-shadow: var(--shadow-sm);
  }

  .filter-pill.active:hover {
    background: var(--accent-hover);
    border-color: var(--accent-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  /* Apps Grid */
  .apps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
    gap: var(--space-xl);
    position: relative;
    z-index: var(--z-elevated);
  }

  .app-item {
    transition: all var(--transition-normal);
  }

  .app-item.glass-hover:hover {
    transform: translateY(-4px) scale(1.02);
  }

  .app-item.hidden {
    display: none;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-20) var(--space-8);
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-2xl);
    backdrop-filter: blur(var(--blur-lg));
    -webkit-backdrop-filter: blur(var(--blur-lg));
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    position: relative;
    z-index: var(--z-elevated);
    box-shadow: var(--shadow-sm);
  }

  .empty-icon {
    opacity: 0.2;
    color: var(--text-tertiary);
    margin-bottom: var(--space-4);
  }

  .empty-state h3 {
    color: var(--text-primary);
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .empty-state p {
    color: var(--text-secondary);
    font-size: var(--font-size-base);
    margin: 0 0 var(--space-4) 0;
  }

  .empty-state .liquid-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: var(--accent);
    border: 1px solid var(--accent);
    border-radius: var(--radius-lg);
    color: white;
    font-size: var(--font-size-base);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-fast);
    font-family: inherit;
    box-shadow: var(--shadow-sm);
  }

  .empty-state .liquid-btn:hover {
    background: var(--accent-hover);
    border-color: var(--accent-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .btn-arrow {
    transition: transform var(--transition-normal);
  }

  .empty-state .liquid-btn:hover .btn-arrow {
    transform: rotate(180deg);
  }

  /* ============================================
     RESPONSIVE DESIGN
     ============================================ */
  @media (max-width: 1024px) {
    .filters-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .apps-grid {
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: var(--space-xl);
    }
  }

  @media (max-width: 768px) {
    .apps-hero {
      min-height: 60vh;
      padding: calc(var(--header-height) + 1.5rem) 0 2rem;
    }

    .hero-header {
      gap: 1.5rem;
    }

    .hero-title {
      font-size: clamp(2.25rem, 10vw, 3rem);
    }

    .filters-section {
      padding: var(--space-6);
      gap: var(--space-6);
    }

    .filters-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .filters-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .apps-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .filter-pills {
      gap: var(--space-2);
    }

    .filter-pill {
      padding: var(--space-2) var(--space-3);
      font-size: var(--font-size-xs);
    }

    .search-input {
      font-size: var(--font-size-sm);
    }

    /* Reduce floating shapes on mobile */
    .shape {
      filter: blur(40px);
      opacity: 0.2;
    }

    .warp-grid {
      background-size: 60px 60px;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: clamp(1.875rem, 12vw, 2.5rem);
    }

    .hero-subtitle {
      font-size: clamp(0.9375rem, 3vw, 1rem);
    }

    .filters-section {
      margin-bottom: var(--space-8);
      padding: var(--space-4);
    }

    .filters-heading {
      font-size: var(--font-size-lg);
    }

    .results-counter {
      font-size: var(--font-size-xs);
    }

    .reset-btn {
      padding: var(--space-2) var(--space-3);
      font-size: var(--font-size-xs);
    }
  }

  /* ============================================
     ACCESSIBILITY
     ============================================ */
  @media (prefers-reduced-motion: reduce) {
    .warp-grid,
    .floating-shapes::before,
    .floating-shapes::after,
    .shape-1,
    .shape-2,
    .shape-3,
    .shape-4,
    .gradient-mesh,
    .badge-dot,
    .hero-badge,
    .title-line,
    .hero-subtitle,
    .app-item,
    .filter-pill {
      animation: none !important;
      transition: none !important;
    }

    .app-item.glass-hover:hover,
    .filter-pill:hover,
    .hero-badge:hover {
      transform: none;
    }
  }

  /* Focus states */
  .search-input:focus-visible,
  .filter-pill:focus-visible,
  .liquid-btn:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.getElementById(
      "searchInput"
    ) as HTMLInputElement;
    const clearSearchBtn = document.getElementById(
      "clearSearch"
    ) as HTMLElement;
    const appsGrid = document.getElementById("appsGrid") as HTMLElement;
    const emptyState = document.getElementById("emptyState") as HTMLElement;
    const appItems = Array.from(document.querySelectorAll(".app-item"));
    const filterPills = Array.from(document.querySelectorAll(".filter-pill"));
    const resetButton = document.getElementById("resetFilters") as HTMLElement;
    const visibleCountEl = document.getElementById(
      "visibleCount"
    ) as HTMLElement;
    const totalCountEl = document.getElementById("totalCount") as HTMLElement;

    let activeFilters = {
      platform: "all",
      tech: "all",
      search: "",
    };

    const totalCount = appItems.length;

    // Update results counter
    function updateCounter(count: number) {
      if (visibleCountEl) visibleCountEl.textContent = count.toString();
    }

    // Check if filters are active
    function hasActiveFilters(): boolean {
      return (
        activeFilters.platform !== "all" ||
        activeFilters.tech !== "all" ||
        activeFilters.search !== ""
      );
    }

    // Enhanced filter functionality
    function filterApps() {
      let visibleCount = 0;

      appItems.forEach((item) => {
        const element = item as HTMLElement;
        const platforms = element.dataset.platforms?.split(",") || [];
        const techs = element.dataset.tech?.split(",") || [];
        const text = element.textContent?.toLowerCase() || "";

        const matchesPlatform =
          activeFilters.platform === "all" ||
          platforms.includes(activeFilters.platform);
        const matchesTech =
          activeFilters.tech === "all" ||
          techs.some((t) => t.includes(activeFilters.tech));
        const matchesSearch =
          activeFilters.search === "" || text.includes(activeFilters.search);

        if (matchesPlatform && matchesTech && matchesSearch) {
          element.classList.remove("hidden");
          visibleCount++;
        } else {
          element.classList.add("hidden");
        }
      });

      // Update UI
      updateCounter(visibleCount);

      if (visibleCount === 0) {
        emptyState.style.display = "flex";
        appsGrid.style.display = "none";
      } else {
        emptyState.style.display = "none";
        appsGrid.style.display = "grid";
      }

      // Show/hide reset button
      if (resetButton) {
        resetButton.style.display = hasActiveFilters() ? "inline-flex" : "none";
      }
    }

    // Search functionality with debouncing
    let searchTimeout: NodeJS.Timeout;
    searchInput?.addEventListener("input", (e) => {
      const value = (e.target as HTMLInputElement).value;

      // Show/hide clear button
      if (clearSearchBtn) {
        clearSearchBtn.style.display = value ? "flex" : "none";
      }

      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        activeFilters.search = value.toLowerCase();
        filterApps();
      }, 300);
    });

    // Clear search
    clearSearchBtn?.addEventListener("click", () => {
      searchInput.value = "";
      activeFilters.search = "";
      clearSearchBtn.style.display = "none";
      filterApps();
      searchInput.focus();
    });

    // Filter pill interactions
    filterPills.forEach((pill) => {
      pill.addEventListener("click", () => {
        const filterType = pill.hasAttribute("data-filter")
          ? "platform"
          : "tech";
        const filterValue =
          pill.getAttribute(
            `data-${filterType === "platform" ? "filter" : "tech"}`
          ) || "all";

        // Update active states
        const siblings =
          pill.parentElement?.querySelectorAll(".filter-pill") || [];
        siblings.forEach((p) => {
          p.classList.remove("active");
        });

        pill.classList.add("active");

        // Update filter state
        if (filterType === "platform") {
          activeFilters.platform = filterValue;
        } else {
          activeFilters.tech = filterValue;
        }

        filterApps();
      });
    });

    // Reset filters
    resetButton?.addEventListener("click", (e) => {
      e.preventDefault();

      // Reset state
      activeFilters = { platform: "all", tech: "all", search: "" };
      searchInput.value = "";

      // Hide clear and reset buttons
      if (clearSearchBtn) clearSearchBtn.style.display = "none";
      resetButton.style.display = "none";

      // Reset pills
      filterPills.forEach((pill) => {
        const isAll = pill.textContent?.trim() === "All";
        pill.classList.remove("active");
        if (isAll) {
          pill.classList.add("active");
        }
      });

      filterApps();
    });

    // Initialize counter
    updateCounter(totalCount);

    // Intersection Observer for scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("animate-in");
        }
      });
    }, observerOptions);

    // Observe app items for scroll animations
    appItems.forEach((item) => {
      observer.observe(item);
    });
  });
</script>
