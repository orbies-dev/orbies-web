---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import AppCard from "../components/AppCard.astro";
import Icon from "../components/Icon.astro";
import { orbs } from "../data/orbs";

const featuredOrbs = orbs.filter((orb) => orb.featured).slice(0, 6);
---

<Layout title="Orbs - Build Small, Share Freely, Move Fast">
  <Hero />

  <section class="philosophy section-padding">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title fade-in-up">How we build</h2>
        <p class="section-subtitle fade-in-up">Three principles.</p>
      </div>

      <div class="philosophy-grid">
        <div class="philosophy-card glass fade-in-up">
          <div class="philosophy-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
            </svg>
          </div>
          <h3>Speed</h3>
          <p>Ship today. Iterate tomorrow.</p>
        </div>

        <div class="philosophy-card glass fade-in-up">
          <div class="philosophy-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <circle cx="12" cy="12" r="4"></circle>
              <path
                d="M4.93 4.93l4.24 4.24M14.83 14.83l4.24 4.24M4.93 19.07l4.24-4.24M14.83 9.17l4.24-4.24"
              ></path>
            </svg>
          </div>
          <h3>Focus</h3>
          <p>One problem. One solution.</p>
        </div>

        <div class="philosophy-card glass fade-in-up">
          <div class="philosophy-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"
              ></path>
            </svg>
          </div>
          <h3>Openness</h3>
          <p>Free. Open source. Always.</p>
        </div>
      </div>
    </div>
  </section>

  <section class="featured-apps section-padding">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title fade-in-up">Featured Orbs</h2>
        <p class="section-subtitle fade-in-up">
          Real tools. Real impact.
        </p>
      </div>

      <div class="apps-grid">
        {
          featuredOrbs.map((orb, index) => (
            <div class="fade-in-up" style={`animation-delay: ${index * 100}ms`}>
              <AppCard
                name={orb.name}
                description={orb.description}
                icon={orb.icon}
                tech={orb.tech}
                buildTime={orb.buildTime}
                github={orb.github}
                stars={orb.stars}
              />
            </div>
          ))
        }
      </div>

      <div class="view-all fade-in-up">
        <a href="/apps" class="btn btn-secondary btn-lg">
          <span>View all Orbs</span>
          <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

