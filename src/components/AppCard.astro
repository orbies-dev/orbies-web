---
import Icon from "./Icon.astro";

interface Props {
  name: string;
  description: string;
  icon: string;
  tech: string[];
  buildTime: string;
  github: string;
  stars?: number;
}

const { name, description, icon, tech, buildTime, github, stars } = Astro.props;
---

<div class="app-card">
  <div class="app-card-bg"></div>

  <div class="app-card-header">
    <div class="app-icon">
      <div class="orb-container">
        <div class="orb-outer"></div>
        <div class="orb-middle"></div>
        <div class="orb-inner"></div>
        <span class="icon-emoji">{icon}</span>
      </div>
    </div>
    <div class="app-info">
      <h3 class="app-name">{name}</h3>
      <p class="app-description">{description}</p>
    </div>
  </div>

  <div class="app-meta">
    <div class="tech-stack">
      {tech.map((t) => <span class="tech-badge">{t}</span>)}
    </div>

    <div class="app-stats">
      <div class="stat">
        <Icon name="clock" size={14} />
        <span class="stat-value">{buildTime}</span>
      </div>
      {
        stars && (
          <div class="stat">
            <Icon name="star" size={14} />
            <span class="stat-value">{stars}</span>
          </div>
        )
      }
    </div>
  </div>

  <a href={github} class="app-link" target="_blank" rel="noopener noreferrer">
    <span>View on GitHub</span>
    <Icon name="external" size={16} />
  </a>
</div>

<style>
  /* ============================================
     GLASSY APP CARD WITH ORB ANIMATIONS
     Clean, minimal, and futuristic
     ============================================ */

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
  }

  @keyframes gradient-shift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .app-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-6, 24px);
    padding: var(--space-8, 32px);
    background: var(--bg-glass, rgba(251, 251, 251, 0.8));
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--border-primary, rgba(44, 44, 44, 0.08));
    border-radius: var(--radius-xl, 16px);
    transition: all var(--transition-normal, 0.25s ease);
    height: 100%;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-sm, 0 2px 4px rgba(0, 0, 0, 0.06));
  }

  .app-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.05) 0%,
      rgba(168, 85, 247, 0.05) 50%,
      rgba(236, 72, 153, 0.05) 100%
    );
    opacity: 0;
    transition: opacity var(--transition-normal);
    pointer-events: none;
  }

  .app-card:hover::before {
    opacity: 1;
  }

  .app-card-bg {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at center,
      rgba(99, 102, 241, 0.03) 0%,
      transparent 50%
    );
    animation: rotate 20s linear infinite;
    pointer-events: none;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .app-card:hover .app-card-bg {
    opacity: 1;
  }

  .app-card:hover {
    border-color: var(--border-strong, rgba(44, 44, 44, 0.12));
    transform: translateY(-4px);
    box-shadow:
      var(--shadow-lg, 0 8px 16px rgba(0, 0, 0, 0.12)),
      0 0 20px var(--accent-glow, rgba(107, 91, 79, 0.15));
  }

  /* Card Header */
  .app-card-header {
    display: flex;
    gap: var(--space-4, 16px);
    align-items: flex-start;
    position: relative;
    z-index: 1;
  }

  .app-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    flex-shrink: 0;
  }

  .orb-container {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: float 3s ease-in-out infinite;
  }

  .orb-outer,
  .orb-middle,
  .orb-inner {
    position: absolute;
    border-radius: 50%;
    border: 1px solid;
  }

  .orb-outer {
    width: 100%;
    height: 100%;
    border-color: rgba(99, 102, 241, 0.2);
    animation: pulse 3s ease-in-out infinite;
  }

  .orb-middle {
    width: 75%;
    height: 75%;
    border-color: rgba(168, 85, 247, 0.3);
    animation: pulse 3s ease-in-out infinite 0.5s;
  }

  .orb-inner {
    width: 50%;
    height: 50%;
    border-color: rgba(236, 72, 153, 0.4);
    background: radial-gradient(
      circle,
      rgba(236, 72, 153, 0.1) 0%,
      transparent 70%
    );
    animation: pulse 3s ease-in-out infinite 1s;
  }

  .icon-emoji {
    position: relative;
    z-index: 2;
    font-size: 1.5rem;
    line-height: 1;
  }

  .app-card:hover .orb-container {
    animation: float 2s ease-in-out infinite;
  }

  .app-card:hover .orb-outer {
    border-color: rgba(99, 102, 241, 0.4);
  }

  .app-card:hover .orb-middle {
    border-color: rgba(168, 85, 247, 0.5);
  }

  .app-card:hover .orb-inner {
    border-color: rgba(236, 72, 153, 0.6);
  }

  .app-info {
    flex: 1;
    min-width: 0;
    position: relative;
    z-index: 1;
  }

  .app-name {
    font-size: var(--font-size-lg, 17px);
    font-weight: 600;
    color: var(--text-primary, #2c2c2c);
    margin: 0 0 var(--space-2, 8px) 0;
    line-height: 1.2;
  }

  .app-description {
    color: var(--text-secondary, #404040);
    line-height: 1.5;
    margin: 0;
    font-size: var(--font-size-sm, 13px);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* App Meta */
  .app-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-4, 16px);
    position: relative;
    z-index: 1;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2, 8px);
  }

  .tech-badge {
    background: var(--bg-glass, rgba(251, 251, 251, 0.8));
    color: var(--text-secondary, #404040);
    padding: var(--space-1, 4px) var(--space-3, 12px);
    border-radius: var(--radius-full, 9999px);
    font-size: var(--font-size-xs, 11px);
    font-weight: 500;
    border: 1px solid var(--border-primary, rgba(44, 44, 44, 0.08));
    transition: all var(--transition-fast, 0.15s ease);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .tech-badge:hover {
    background: var(--bg-glass-strong, rgba(251, 251, 251, 0.94));
    color: var(--text-primary, #2c2c2c);
    border-color: var(--border-strong, rgba(44, 44, 44, 0.12));
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm, 0 2px 4px rgba(0, 0, 0, 0.06));
  }

  .app-stats {
    display: flex;
    gap: var(--space-6, 24px);
    align-items: center;
  }

  .stat {
    display: flex;
    align-items: center;
    gap: var(--space-2, 8px);
    color: var(--text-tertiary, #555555);
    font-size: var(--font-size-xs, 11px);
    font-weight: 500;
  }

  .stat :global(svg) {
    opacity: 0.7;
    transition: opacity var(--transition-fast, 0.15s ease);
  }

  .stat:hover :global(svg) {
    opacity: 1;
  }

  .stat-value {
    font-variant-numeric: tabular-nums;
  }

  /* App Link */
  .app-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3, 12px);
    padding: var(--space-4, 16px);
    background: var(--bg-glass, rgba(251, 251, 251, 0.8));
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid var(--border-primary, rgba(44, 44, 44, 0.08));
    border-radius: var(--radius-lg, 12px);
    color: var(--text-secondary, #404040);
    text-decoration: none;
    font-size: var(--font-size-sm, 13px);
    font-weight: 500;
    transition: all var(--transition-fast, 0.15s ease);
    margin-top: auto;
    position: relative;
    z-index: 1;
  }

  .app-link:hover {
    background: var(--bg-glass-strong, rgba(251, 251, 251, 0.94));
    border-color: var(--border-strong, rgba(44, 44, 44, 0.12));
    color: var(--text-primary, #2c2c2c);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md, 0 4px 8px rgba(0, 0, 0, 0.08));
  }

  .app-link :global(svg) {
    transition: transform var(--transition-fast, 0.15s ease);
    opacity: 0.6;
  }

  .app-link:hover :global(svg) {
    transform: translate(2px, -2px);
    opacity: 1;
  }

  /* ============================================
     RESPONSIVE DESIGN
     ============================================ */

  @media (max-width: 768px) {
    .app-card {
      padding: var(--space-6, 24px);
    }

    .app-card-header {
      gap: var(--space-3, 12px);
    }

    .app-icon {
      width: 48px;
      height: 48px;
    }

    .icon-emoji {
      font-size: 1.25rem;
    }

    .app-stats {
      gap: var(--space-4, 16px);
    }
  }

  /* ============================================
     ACCESSIBILITY
     ============================================ */

  .app-link:focus-visible {
    outline: 2px solid rgba(99, 102, 241, 0.5);
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .app-card,
    .app-card-bg,
    .orb-container,
    .orb-outer,
    .orb-middle,
    .orb-inner,
    .tech-badge,
    .app-link,
    .app-link :global(svg) {
      animation: none !important;
      transition: none !important;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .app-card {
      border-width: 2px;
      background: rgba(255, 255, 255, 0.08);
    }

    .tech-badge,
    .app-link {
      border-width: 2px;
      background: rgba(255, 255, 255, 0.1);
    }

    .orb-outer,
    .orb-middle,
    .orb-inner {
      border-width: 2px;
    }
  }

  /* ============================================
     COMPUTER MODE OVERRIDES
     ============================================ */

  :global([data-theme="computer"]) .app-card {
    background: transparent !important;
    border: 2px solid var(--border-primary);
    border-radius: 0;
    backdrop-filter: none;
  }

  :global([data-theme="computer"]) .app-card::before {
    display: none;
  }

  :global([data-theme="computer"]) .app-card-bg {
    display: none;
  }

  :global([data-theme="computer"]) .app-card:hover {
    background: transparent !important;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  :global([data-theme="computer"]) .orb-outer,
  :global([data-theme="computer"]) .orb-middle,
  :global([data-theme="computer"]) .orb-inner {
    border-color: var(--border-primary);
    background: transparent !important;
  }

  :global([data-theme="computer"]) .app-card:hover .orb-outer {
    border-color: var(--border-strong);
  }

  :global([data-theme="computer"]) .app-card:hover .orb-middle {
    border-color: var(--border-strong);
  }

  :global([data-theme="computer"]) .app-card:hover .orb-inner {
    border-color: var(--text-primary);
    background: transparent !important;
  }

  :global([data-theme="computer"]) .tech-badge {
    background: transparent !important;
    border: 1px solid var(--border-primary);
    border-radius: 0;
    color: var(--text-primary);
    backdrop-filter: none;
  }

  :global([data-theme="computer"]) .tech-badge:hover {
    background: transparent !important;
    border-color: var(--border-strong);
    box-shadow: none;
  }

  :global([data-theme="computer"]) .app-link {
    background: transparent !important;
    border: 2px solid var(--border-primary);
    border-radius: 0;
    color: var(--text-primary);
    backdrop-filter: none;
  }

  :global([data-theme="computer"]) .app-link:hover {
    background: transparent !important;
    border-color: var(--border-strong);
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
  }

  :global([data-theme="computer"]) .stat :global(svg) {
    opacity: 1;
  }

  :global([data-theme="computer"]) .app-link :global(svg) {
    opacity: 1;
  }
</style>
