<section class="hero">
  <div class="hero-background">
    <div class="warp-grid"></div>
    <div class="floating-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
    </div>
    <div class="gradient-mesh"></div>
  </div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-badge fade-in-up" style="animation-delay: 0.2s">
        <div class="badge-dot"></div>
        <span>Built in hours</span>
      </div>

      <h1 class="hero-title">
        <span class="title-line fade-in-up" style="animation-delay: 0.4s"
          >For builders</span
        >

        <span class="title-line fade-in-up" style="animation-delay: 0.6s">
          who ship <span class="hero-accent">fast</span>.
        </span>
      </h1>

      <p class="hero-description fade-in-up" style="animation-delay: 0.8s">
        Build tools in hours, not months. Solve one problem well. Share freely.
      </p>

      <div class="hero-actions fade-in-up" style="animation-delay: 1s">
        <a href="/apps" class="btn btn-primary">
          <span>Browse Orbs</span>
          <svg
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="/manifesto" class="btn btn-secondary">
          <span>Learn more</span>
        </a>
      </div>

      <div class="hero-stats fade-in-up" style="animation-delay: 1.2s">
        <div class="stat">
          <div class="stat-number counter" data-target="2">0</div>
          <div class="stat-label">Orbs</div>
        </div>
        <div class="stat">
          <div class="stat-number counter" data-target="20">0</div>
          <div class="stat-label">Hours</div>
        </div>
        <div class="stat">
          <div class="stat-number counter" data-target="100">0</div>
          <div class="stat-label">Free</div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Counter animation
  const counters = document.querySelectorAll(".counter");

  const animateCounter = (counter: Element) => {
    const target = parseFloat(counter.getAttribute("data-target") || "0");
    const increment = target / 60;
    let current = 0;

    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        current = target;
        clearInterval(timer);
      }

      if (target % 1 === 0) {
        counter.textContent =
          Math.floor(current) + (target >= 100 ? "%" : target >= 10 ? "+" : "");
      } else {
        counter.textContent = current.toFixed(1);
      }
    }, 16);
  };

  // Intersection Observer for counter animation
  const observerOptions = {
    threshold: 0.5,
    rootMargin: "0px 0px -100px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const counter = entry.target;
        animateCounter(counter);
        observer.unobserve(counter);
      }
    });
  }, observerOptions);

  counters.forEach((counter) => observer.observe(counter));
</script>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    background: var(--bg-primary);
  }

  .hero-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  /* Minimalist warp grid effect */
  .warp-grid {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(
        var(--border-primary) 0.5px,
        transparent 0.5px
      ),
      linear-gradient(90deg, var(--border-primary) 0.5px, transparent 0.5px);
    background-size: 80px 80px;
    opacity: 0.4;
    animation: warpFloat 30s ease-in-out infinite;
    transform-origin: center;
  }

  @keyframes warpFloat {
    0%,
    100% {
      transform: perspective(1000px) rotateX(0deg) rotateY(0deg) scale(1);
    }
    33% {
      transform: perspective(1000px) rotateX(2deg) rotateY(1deg) scale(1.02);
    }
    66% {
      transform: perspective(1000px) rotateX(-1deg) rotateY(-2deg) scale(0.98);
    }
  }

  /* Subtle floating shapes */
  .floating-shapes {
    position: absolute;
    inset: 0;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent-soft), transparent);
    animation: shapeFloat 20s ease-in-out infinite;
    filter: blur(1px);
  }

  .shape-1 {
    width: 200px;
    height: 200px;
    top: 20%;
    left: 15%;
    animation-delay: 0s;
  }

  .shape-2 {
    width: 120px;
    height: 120px;
    top: 60%;
    right: 20%;
    animation-delay: 7s;
  }

  .shape-3 {
    width: 80px;
    height: 80px;
    top: 15%;
    right: 30%;
    animation-delay: 14s;
  }

  @keyframes shapeFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.3;
    }
    50% {
      transform: translate(20px, -15px) scale(1.1);
      opacity: 0.6;
    }
  }

  /* Gradient mesh overlay */
  .gradient-mesh {
    position: absolute;
    inset: 0;
    background: radial-gradient(
        circle at 20% 50%,
        var(--accent-glow) 0%,
        transparent 50%
      ),
      radial-gradient(circle at 80% 20%, var(--accent-soft) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, var(--accent-glow) 0%, transparent 50%);
    animation: meshShift 25s ease-in-out infinite;
  }

  @keyframes meshShift {
    0%,
    100% {
      opacity: 0.4;
      transform: scale(1) rotate(0deg);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.1) rotate(2deg);
    }
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: var(--z-elevated);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-full);
    backdrop-filter: blur(var(--blur-md));
    -webkit-backdrop-filter: blur(var(--blur-md));
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--text-tertiary);
    margin-bottom: var(--space-10);
    transition: all var(--transition-normal);
    box-shadow: var(--shadow-sm);
  }

  .hero-badge:hover {
    transform: translateY(-1px);
    border-color: var(--border-strong);
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    background: var(--accent);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.2);
    }
  }

  .hero-title {
    font-size: clamp(var(--font-size-5xl), 8vw, 4.5rem);
    font-weight: var(--font-weight-extrabold);
    line-height: 1.1;
    margin-bottom: var(--space-8);
    letter-spacing: -0.045em;
    color: var(--text-primary);
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .title-line {
    display: block;
  }

  .hero-accent {
    color: var(--accent);
    position: relative;
    font-weight: var(--font-weight-black);
  }

  .hero-accent::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent);
    border-radius: var(--radius-full);
    opacity: 0.3;
    animation: accentGlow 4s ease-in-out infinite;
  }

  @keyframes accentGlow {
    0%,
    100% {
      opacity: 0.3;
      transform: scaleX(1);
    }
    50% {
      opacity: 0.6;
      transform: scaleX(1.05);
    }
  }

  .hero-description {
    font-size: var(--font-size-lg);
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: var(--space-12);
    font-weight: var(--font-weight-normal);
    letter-spacing: -0.01em;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .highlight {
    color: var(--accent);
    font-weight: var(--font-weight-semibold);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    align-items: center;
    margin-bottom: var(--space-20);
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-normal);
    border: 1px solid transparent;
    position: relative;
    font-family: inherit;
    outline: none;
    backdrop-filter: blur(var(--blur-sm));
    -webkit-backdrop-filter: blur(var(--blur-sm));
    letter-spacing: -0.01em;
  }

  .btn-primary {
    background: var(--accent);
    color: var(--text-inverse);
    border-color: var(--accent);
    box-shadow: var(--shadow-sm);
  }

  .btn-primary svg {
    color: var(--text-inverse);
    stroke: var(--text-inverse);
  }

  .btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .btn-secondary {
    background: var(--bg-glass);
    color: var(--text-primary);
    border-color: var(--border-primary);
    backdrop-filter: blur(var(--blur-md));
    -webkit-backdrop-filter: blur(var(--blur-md));
  }

  .btn-secondary svg {
    color: var(--text-primary);
    stroke: var(--text-primary);
  }

  .btn-secondary:hover {
    background: var(--bg-glass-strong);
    border-color: var(--border-strong);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
    max-width: 500px;
    margin: 0 auto;
    padding: var(--space-8);
    background: var(--bg-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-2xl);
    backdrop-filter: blur(var(--blur-lg));
    -webkit-backdrop-filter: blur(var(--blur-lg));
    box-shadow: var(--shadow-sm);
  }

  .stat {
    text-align: center;
    transition: all var(--transition-normal);
  }

  .stat:hover {
    transform: translateY(-2px);
  }

  .stat-number {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-black);
    color: var(--accent);
    line-height: 1;
    margin-bottom: var(--space-1);
    font-variant-numeric: tabular-nums;
  }

  .stat-label {
    font-size: var(--font-size-xs);
    color: var(--text-tertiary);
    font-weight: var(--font-weight-medium);
    line-height: 1.3;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Enhanced responsive design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: clamp(var(--font-size-4xl), 10vw, var(--font-size-5xl));
    }

    .hero-description {
      font-size: var(--font-size-base);
      margin-bottom: var(--space-10);
    }

    .hero-actions {
      flex-direction: column;
      gap: var(--space-3);
      margin-bottom: var(--space-16);
    }

    .hero-stats {
      grid-template-columns: 1fr;
      gap: var(--space-6);
      padding: var(--space-6);
      max-width: 280px;
    }

    .shape-1 {
      width: 120px;
      height: 120px;
    }
    .shape-2 {
      width: 80px;
      height: 80px;
    }
    .shape-3 {
      width: 50px;
      height: 50px;
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      padding: 0 var(--space-4);
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 260px;
    }

    .hero-stats {
      margin: 0 var(--space-4);
    }

    .hero-badge {
      margin-bottom: var(--space-8);
    }
  }

  /* Accessibility and motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .warp-grid,
    .shape,
    .gradient-mesh,
    .badge-dot,
    .hero-accent::after {
      animation: none !important;
    }

    .fade-in-up {
      opacity: 1 !important;
      transform: none !important;
    }
  }

  /* Fade in animation - Enhanced visibility */
  .fade-in-up {
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(40px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .hero-badge,
    .hero-stats {
      border-width: 2px;
    }

    .shape,
    .gradient-mesh {
      opacity: 0.8;
    }
  }

  /* ============================================
     COMPUTER MODE - TERMINAL AESTHETIC
     ============================================ */

  :global([data-theme="computer"]) .hero {
    background: var(--bg-primary);
  }

  /* Cyberpunk gradient overlay in computer mode */
  :global([data-theme="computer"]) .floating-shapes {
    display: none;
  }

  :global([data-theme="computer"]) .gradient-mesh {
    background: radial-gradient(
        circle at 20% 30%,
        rgba(0, 240, 255, 0.08) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 70%,
        rgba(0, 136, 255, 0.06) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 50% 50%,
        rgba(176, 0, 255, 0.04) 0%,
        transparent 60%
      );
    animation: cyberMeshShift 20s ease-in-out infinite;
  }

  @keyframes cyberMeshShift {
    0%,
    100% {
      opacity: 0.5;
      transform: scale(1) rotate(0deg);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.05) rotate(1deg);
    }
  }

  /* ASCII Grid Background */
  :global([data-theme="computer"]) .warp-grid {
    background-image: repeating-linear-gradient(
        0deg,
        transparent,
        transparent 19px,
        rgba(0, 240, 255, 0.12) 19px,
        rgba(0, 240, 255, 0.12) 20px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 9px,
        rgba(0, 136, 255, 0.08) 9px,
        rgba(0, 136, 255, 0.08) 10px
      );
    opacity: 1;
    animation: terminalScan 3s linear infinite;
  }

  @keyframes terminalScan {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(20px);
    }
  }

  /* Terminal-style badge */
  :global([data-theme="computer"]) .hero-badge {
    border-radius: var(--radius-md);
    border: 1px solid var(--border-primary);
    background: var(--bg-glass);
    backdrop-filter: blur(var(--blur-md));
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
    font-size: var(--font-size-xs);
  }

  :global([data-theme="computer"]) .badge-dot {
    border-radius: 0;
    width: 8px;
    height: 8px;
    background: none;
    border: 2px solid var(--text-primary);
    animation: terminalBlink 1s step-end infinite;
  }

  @keyframes terminalBlink {
    0%,
    50% {
      border-color: var(--text-primary);
      background: var(--text-primary);
    }
    51%,
    100% {
      border-color: var(--text-secondary);
      background: transparent;
    }
  }

  /* Title with ASCII decorations */
  :global([data-theme="computer"]) .hero-title {
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  :global([data-theme="computer"]) .hero-accent {
    text-decoration: underline;
    text-decoration-style: solid;
    text-decoration-thickness: 2px;
    text-underline-offset: 6px;
    text-decoration-color: var(--accent);
    font-weight: 700;
  }

  :global([data-theme="computer"]) .hero-accent::after {
    display: none;
  }

  /* Terminal-style stats box */
  :global([data-theme="computer"]) .hero-stats {
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-primary);
    background: var(--bg-glass);
    backdrop-filter: blur(var(--blur-lg));
    position: relative;
    padding: var(--space-8);
    box-shadow: 0 4px 20px rgba(0, 240, 255, 0.08);
  }

  :global([data-theme="computer"]) .stat-number {
    font-family: "JetBrains Mono", monospace;
    color: var(--text-primary);
    font-weight: 600;
  }

  :global([data-theme="computer"]) .stat-label {
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  /* Terminal typing effect for description */
  :global([data-theme="computer"]) .hero-description::after {
    content: "_";
    animation: blink 0.7s step-end infinite;
    margin-left: 2px;
  }

  /* Removed scanline overlay for better readability */

  /* Computer Mode - Button Overrides */
  :global([data-theme="computer"]) .btn {
    border-radius: 0;
    border: 2px solid var(--border-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    backdrop-filter: none;
  }

  :global([data-theme="computer"]) .btn-primary {
    background: var(--text-primary);
    color: var(--bg-primary);
    border-color: var(--text-primary);
  }

  :global([data-theme="computer"]) .btn-primary svg {
    color: var(--bg-primary) !important;
    stroke: var(--bg-primary) !important;
  }

  :global([data-theme="computer"]) .btn-primary:hover {
    box-shadow:
      0 0 25px rgba(0, 240, 255, 0.6),
      0 0 50px rgba(0, 136, 255, 0.3);
    transform: scale(1.02);
  }

  :global([data-theme="computer"]) .btn-secondary {
    background: transparent;
    border-color: var(--border-primary);
    color: var(--text-primary);
  }

  :global([data-theme="computer"]) .btn-secondary svg {
    color: var(--text-primary) !important;
    stroke: var(--text-primary) !important;
  }

  :global([data-theme="computer"]) .btn-secondary:hover {
    background: var(--bg-secondary);
    border-color: var(--border-strong);
    box-shadow:
      0 0 20px rgba(0, 240, 255, 0.4),
      0 0 35px rgba(0, 136, 255, 0.25);
  }
</style>
